# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[package.json]
indent_style = space
indent_size = 2

[tsconfig.json]
indent_style = space
indent_size = 2

[*.js]
quote_type = double

[*.ts]
quote_type = double

[*.md]
max_line_length = off
